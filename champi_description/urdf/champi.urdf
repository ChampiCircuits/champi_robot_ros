<?xml version="1.0"?>
<robot name="my_robot">
  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- Lidar Link -->
  <link name="base_laser">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- Camera Link -->
  <link name="camera_link">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- IMU link -->
  <link name="imu_link"/>

  <!-- Joint between base_link and lidar -->
  <joint name="base_to_lidar" type="fixed">
    <parent link="base_link"/>
    <child link="base_laser"/>
    <origin xyz="0 0 0.3" rpy="0 0 1.57"/>
  </joint>

  <!-- Joint between base_link and camera -->
  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <!-- <origin xyz="0.15 0. 0.31" rpy="-2.20 0.0 -1.57079632679"/> NEW TRANFORMATION ANGLE = 35deg -->
    <origin xyz="0.15 0. 0.31" rpy="-2.35 0.0 -1.57079632679"/>  <!-- TRANFORMATION ANGLE = 40 deg-->
    <!-- <origin xyz="0.15 0 0.3" rpy="0.78539816339 3.14159265359 1.57079632679"/>--> <!-- old TRANFORMATION -->
    <!-- xyz = roll pitch yaw -->
  </joint>

  <!-- Joint between base_link and imu -->
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
</robot>

</robot>